
  <view class="container">
    <block wx:for="{{photoList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
       
  <view class="photo-item">
    <!-- <image src="http://wd4.jiuyan.info/2015/04/22/ACEE75F2-8C6A-70FD-6A65-4F61950053C8.jpg?v=2" /> -->
    <!-- avatar -->
    <view class="s-avatar-wrap">
      <image class="s-avatar" mode="aspectFill" src="{{item.user.avatar}}"/>

      <view class="s-name-wrap">
        <view class="name">{{item.user.name}}</view>
        <view class="time">{{item.fmt_time}}</view>
      </view>
      <view class="s-operate">123</view>
    </view>
    <!-- photos -->
      <scroll-view class="s-photos-wrap p-{{item.photos.length}}" scroll-x>
     <image mode="aspectFill"  wx:for="{{item.photos}}" wx:for-index="idx" wx:for-item="item" src="{{item.url}}" wx:key="idx" bindtap="$photoItem$clickImage" data-index="{{idx}}" data-com-index="{{index}}"/>
  </scroll-view>
  <!-- bars -->
  <view class="s-bars-wrap">
     <view class="s-down" bindtap="$photoItem$downUrl" data-com-index="{{index}}">123</view>
     <view class="icons-wrap">
       <view class="s-like iconfont {{item.is_zan ? 'icon-kefu disable':''}}" bindtap="$photoItem$clickZan" data-com-index="{{index}}">12312</view>
       <view class="s-comment">123</view>
       <view class="s-print">123</view>
     </view>
  </view>
   <view class="s-operate-wrap">
     <!-- zan -->
     <view class="s-zan-wrap">
     
     </view>
     <!-- comment -->
      <view class="s-comment-wrap"/>
     </view>
   
    <!-- <text class="id">{{grouplist.id}}. </text>
    <text class="name" bindtap="tap">{{grouplist.name}}</text>
    <view>
      <repeat for="{{grouplist.list}}" item="item">
        <groupitem v-bind:gitem.once="item"></groupitem>
      </repeat>
    </view> -->
  </view>

    </block>

    
<!-- 预览图片 -->
<swiper class="c-main-swiper" bindchange="$previewPhoto$swiperChange" current="{{$previewPhoto$index}}" data-idx="{{$previewPhoto$photos}}" wx:if="{{previewPhotos.length != 0}}">
  {{$previewPhoto$photos}}
  <block  wx:for="{{$previewPhoto$photos}}" wx:for-index="idx" wx:for-item="item" wx:key="{{idx}}">
    <swiper-item bindtap="$previewPhoto$closeSwiper">
      <view class="slide-image" style="background-image:url({{item.url}})"/>
    </swiper-item>
  </block>
  <view class="swiper-index"  wx:if="{{$previewPhoto$photos.length >1}}">{{$previewPhoto$index +1}}/{{$previewPhoto$photos.length}}</view>
</swiper>
  
    
<view class="c-publish-photo">
  <!-- <view class="s-publish-btn" bindtap="chooseImage"> -->
  <view class="s-publish-btn" bindtap="$publishPhoto$pushlish">
    上传照片
  </view>
</view>
  

  </view>